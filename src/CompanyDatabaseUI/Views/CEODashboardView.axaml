<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CompanyDatabaseUI.ViewModels"
             x:DataType="vm:CEODashboardViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompanyDatabaseUI.Views.CEODashboardView">
    <StackPanel>
        <TextBlock Text="{Binding CustomerTotal}"
                   Margin="20,5"
                   FontSize="50"
                   FontWeight="Bold"/>
                
        <DataGrid ItemsSource="{Binding CustomerList}"
                  Margin="20,5"
                  IsReadOnly="True"
                  Height="500"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                  ColumnWidth="*"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="Gray">
        </DataGrid>
    </StackPanel>
</UserControl>
